    <div class="messages alert alert-danger">
        <ul class="pagination">
            <?php foreach($messages->get('info') as $msg) : ?>
                <li> <?php echo $msg ?></li>
            <?php endforeach; ?>
        </ul>
        <a href="#" class="close" data-dismiss="alert">&times;</a>
    </div>
<?php endif; ?>