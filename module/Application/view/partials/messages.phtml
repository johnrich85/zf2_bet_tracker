<?php if ($messages->has('info')) : ?>
<div class="messages alert alert-info">
    <ul class="pagination">
        <?php foreach($messages->get('info') as $msg) : ?>
            <li> <?php echo $msg ?></li>
        <?php endforeach; ?>
    </ul>
